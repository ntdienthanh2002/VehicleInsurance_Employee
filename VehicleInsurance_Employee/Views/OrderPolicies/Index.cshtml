@model IEnumerable<VehicleInsurance_Employee.Models.OrderPolicy>

@{
    ViewBag.Title = "Index";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong> @TempData["AlertMessage"]</strong>
    </div>
}

<!-- Static Table Start -->
<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="sparkline13-list">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h1>Order Policies</h1>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true"
                                   data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                <thead>
                                    <tr>
                                        <th data-field="policyNumber">
                                            @Html.DisplayNameFor(model => model.PolicyNumber)
                                        </th>
                                        <th data-field="customerName">
                                            @Html.DisplayNameFor(model => model.Vehicle.Customer.CustomerName)
                                        </th>
                                        <th data-field="insuranceTypeName">
                                            @Html.DisplayNameFor(model => model.InsuranceType.InsuranceTypeName)
                                        </th>
                                        <th data-field="orderDate">
                                            @Html.DisplayNameFor(model => model.OrderDate)
                                        </th>
                                        <th data-field="policyDate">
                                            @Html.DisplayNameFor(model => model.PolicyDate)
                                        </th>
                                        <th data-field="policyDuration">
                                            @Html.DisplayNameFor(model => model.PolicyDuration)
                                        </th>
                                        <th data-field="aymentType">
                                            @Html.DisplayNameFor(model => model.PaymentType)
                                        </th>
                                        <th data-field="status">
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        <th data-field="action">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PolicyNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Vehicle.Customer.CustomerName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InsuranceType.InsuranceTypeName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OrderDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PolicyDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PolicyDuration)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PaymentType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>
                                            <td>
                                                <a title="Edit" href="@Url.Action("Edit", "OrderPolicies", new { id=item.PolicyNumber })" aria-expanded="false" class="btn btn-custon-rounded-four btn-primary">
                                                    <span class="fa fa-edit" aria-hidden="true"></span>
                                                </a>
                                                <a title="View Bills" href="@Url.Action("Details", "OrderPolicies", new { id=item.PolicyNumber })" aria-expanded="false" class="btn btn-custon-rounded-four btn-info">
                                                    <span class="fa fa-eye" aria-hidden="true"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
