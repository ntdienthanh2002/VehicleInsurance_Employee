@model VehicleInsurance_Employee.Models.Vehicle

@{
    ViewBag.Title = "Edit";
}

<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <div id="myTabContent" class="tab-content custom-product-edit">
                        <div class="product-tab-list tab-pane fade active in" id="description">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="pull-left">
                                        <h1>Vehicle</h1>
                                    </div>
                                    <div class="pull-right">
                                        <a title="Back to list" href="@Url.Action("Index")" aria-expanded="false" class="btn btn-primary waves-effect waves-light">
                                            <span class="fa fa-chevron-left" aria-hidden="true"></span>
                                            Back
                                        </a>
                                    </div>
                                    <div class="review-content-section">
                                        <div id="dropzone1" class="pro-ad">
                                            <br />
                                            <hr />
                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @Html.HiddenFor(model => model.VehicleID)
                                                <form action="#" class="dropzone dropzone-custom needsclick add-professors" id="demo1-upload">
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.VehicleID, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.VehicleID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.VehicleID, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.VehicleTypeID, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.VehicleTypeID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.VehicleTypeID, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.VehicleModel.VehicleBrandID, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.VehicleModel.VehicleBrandID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.VehicleModel.VehicleBrandID, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.VehicleModelID, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.VehicleModelID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.VehicleModelID, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.CustomerID, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.CustomerID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.VehicleOwnerName, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.VehicleOwnerName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.VehicleOwnerName, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.VehicleBodyNumber, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.VehicleBodyNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.VehicleBodyNumber, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.VehicleEngineNumber, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.VehicleEngineNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.VehicleEngineNumber, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.VehicleNumber, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.VehicleNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.VehicleNumber, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @{
                                                                    string base64String = Convert.ToBase64String(Model.Image, 0, Model.Image.Length);
                                                                    string image = "data:image/igp;base64," + base64String;
                                                                    <img src="@image" style="height:150px; width:150px" alt="@Model.Image" />
                                                                }
                                                                @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
                                                                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.SeatNumber, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.EditorFor(model => model.SeatNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                @Html.ValidationMessageFor(model => model.SeatNumber, "", new { @class = "text-danger" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-10" })
                                                                @Html.DropDownListFor(model => model.Status, new List<SelectListItem> { new SelectListItem { Text = "Disable", Value = "Disable" }, new SelectListItem { Text = "Enable", Value = "Enable" }, new SelectListItem { Text = "Invalid", Value = "Invalid" } }, new { @class = "form-control" })
                                                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="payment-adress">
                                                                <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
