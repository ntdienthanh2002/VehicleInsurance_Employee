@model VehicleInsurance_Employee.Models.Employee

@{
    ViewBag.Title = "Login";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong> @TempData["AlertMessage"]</strong>
    </div>
}

<div class="error-pagewrap">
    <div class="error-page-int">
        <div class="text-center m-b-md custom-login">
            <h3>PLEASE LOGIN TO WEBSITE</h3>
        </div>
        <div class="content-error">
            <div class="hpanel">
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-0" })
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-0" })
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-primary waves-effect waves-light" value="Login" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>